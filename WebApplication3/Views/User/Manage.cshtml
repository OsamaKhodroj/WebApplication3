<div class="row">
    <div class="col-md-6">
        <a asp-action="Add" asp-controller="User">Add New User</a>
    </div>
</div>
<br />
<div class="card">

    
     
    <h5 class="card-header">Users List</h5>
    <div class="table-responsive text-nowrap">

        <table class="table">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>User Type</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Username</td>
                        <td>@item.Email</td> 
                        <td><span class="badge bg-label-primary me-1">@item.UserType</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Edit" asp-controller="User" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="Delete" asp-controller="User"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>